<!--pages/order/order.wxml-->
<view class="container">
<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="order">
    <view class="order-item">
      <text class="">商品信息</text>
    </view>
    <view class="order-item">
      <text class="">商品名：</text>
      <text class="">现代招商引资操作实务</text>
    </view>
    <view class="order-item">
      <text class="">数量：</text>
      <input type='number'name="num" maxlength='3' value='1' class="item-num"/>
    </view>
    <view class="order-item">
      <text class="">价格：</text>
      <text class="">￥32.40</text>
    </view>
  </view>
  <view class="order">
    <view class="order-item">
      <text class="">收货信息</text>
    </view>
    <view class="order-item">
      <text class="" name="buyer">姓名：</text>
      <input maxlength='10' class="item-num"/>
    </view>
    <view class="order-item">
      <text class="" name="phone">电话：</text>
      <input maxlength='11' type='number' class="item-num"/>
    </view>
    <view class="order-item">
      <text class="">地址：</text>
      <input type='text' name="address" class="item-address" value='{{order.address}}'/>
      <text class="label blue iconfont icon-location" bindtap="openAddress"></text>
    </view>
  </view>
  <button class="btn-pay" formType="submit">订单确认</button>
  </form>
</view>
