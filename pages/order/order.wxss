/* pages/order/order.wxss */

.container{
  padding: 0;
}

.order{
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: baseline;
  background-color: white;
  color:black;
  font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}

.order-item {
  display: flex;
  width: 100%;
  font-size: 30rpx;
  flex-direction: row;
  align-items:center;
  height: 70rpx;
  padding: 15rpx 0 15rpx 70rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.item-num{
  display: inline-flex;
  flex-direction: row;
  width: 60%;
}

.item-address{
  width: 520rpx;
}

.order-item:first-child {
  padding-left: 30rpx;
}

.order-item:last-child {
  border-bottom: none;
}

.order-item:nth-last-child(1){
  border-bottom: 1rpx solid #e0e0e0;
}

.btn-pay{
  position: fixed;
  z-index: 999;
  bottom: 0;
  width: 100%;
  background-color: #4169E1;
  color: white;
  border-radius: 5rpx;
  font-family: Arial, Helvetica, sans-serif;
}