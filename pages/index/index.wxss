/**index.wxss**/
.container{
  padding: 1rpx;
}
.swiper-items{
  height: 350rpx;
  margin: 0;
  padding: 0;
}
.slide-image{
  width: 100%;
  height: 350rpx;
}
.course{
  margin: 10rpx 5rpx;
  display: flex;
  border-bottom: 1rpx solid #e0e0e0;
  align-items: center;
  flex-direction: row;
}
.course-view{
  width: 256rpx;
  height: 170rpx;
}
.course-info{
  width:100%;
}
.course-info-title{
  color: black;
  margin-top:10rpx;
  font-family: sans-serif;
  margin-left: 25rpx;
  font-size: 30rpx;
  display: block;
}
.course-info-teacher{
  margin-top: 10rpx;
  font-family: sans-serif;
  margin-left: 25rpx;
  font-size: 28rpx;
  display: block;
}
.course-info-num{
  font-family: sans-serif;
  margin-left: 25rpx;
  font-size: 28rpx;
  display: block;
}
.course-info-value{
  margin-right: 10rpx;
  color: #FF3030;
  float: right;
}